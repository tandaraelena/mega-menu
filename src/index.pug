doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title solving Mega Menu challenge
    link(href="style.css", rel="stylesheet")
  body
    .mega_menu
      each menu,key in data.menu  
        .mega_menu_top-item
          a.mega_menu_top-link(href=`/${menu.id}`)=menu.label
          .mega_menu_drop-down
            h2=menu.label
            ul
              each menu2,key in menu.secondMenuItemList
                li.mega_menu_drop2
                  span=menu2.label
                  .mega_menu_drop-down2
                    h3=menu2.label
                    .list
                        ul.list-1
                          each item in menu2.list1
                            li.last-li
                              a(href=item.link, class=item.bold?'bold-link':'')=item.label
                        ul.list-2
                          each item in menu2.list2
                            li.last-li
                              a(href=item.link, class=item.bold?'bold-link':'')=item.label
